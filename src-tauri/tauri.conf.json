{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "project-sapphire",
  "version": "0.1.4",
  "identifier": "io.github.eurydia.projectsapphire",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "visible": true,
        "title": "Project Sapphire",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "shortDescription": "A project to keep track project ideas.",
    "longDescription": "A small file explorer with a mix of ObsidianMD and GitHub.",
    "category": "Productivity",
    "license": "MIT",
    "useLocalToolsDir": true,
    "homepage": "https://github.com/eurydia/project-sapphire",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
